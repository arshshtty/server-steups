# Traefik Configuration
# Copy this file to .env and customize for your setup

# ===================================
# ACME / Let's Encrypt Configuration
# ===================================
# Email for Let's Encrypt notifications
ACME_EMAIL=admin@example.com

# ===================================
# Dashboard Configuration
# ===================================
# Enable Traefik dashboard (true/false)
ENABLE_DASHBOARD=true

# Domain for accessing the dashboard
TRAEFIK_DASHBOARD_DOMAIN=traefik.example.com

# Port for dashboard (when accessing via IP)
# Set to 8080 by default, or use 0 to disable port binding
TRAEFIK_DASHBOARD_PORT=8080

# Allow insecure dashboard access (not recommended for production)
DASHBOARD_INSECURE=false

# Basic auth for dashboard
# Generate with: htpasswd -nb admin your_password
# Or use: echo $(htpasswd -nb admin password) | sed -e s/\\$/\\$\\$/g
# Example below is admin:admin (CHANGE THIS!)
DASHBOARD_AUTH=admin:$$apr1$$8EVjn/nj$$GiLUZqcbueTFeD23SuB6x0

# ===================================
# Cloudflare DNS Challenge (Optional)
# ===================================
# Only needed if using Cloudflare DNS challenge instead of TLS challenge
# Leave empty if using TLS challenge (default)
CF_API_EMAIL=
CF_DNS_API_TOKEN=

# ===================================
# Logging
# ===================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
